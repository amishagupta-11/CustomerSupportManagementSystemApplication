@model CustomerSupportManagementSystemApplication.Models.Tickets

<h2>New Ticket</h2>

<form asp-action="CreateTicket" method="post">
    <div class="form-group">
        <label asp-for="Issue">Issue</label>
        <textarea asp-for="Issue" class="form-control" required></textarea>
        <span asp-validation-for="Issue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Category</label>
        <select asp-for="Category" class="form-control" required>
            <option value="">-- Select Category --</option>
            <option value="Technical">Technical</option>
            <option value="Billing">Billing</option>
            <option value="PayRoll">PayRoll</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
